@model SignUpViewModel
@{
	ViewData["Title"] = "Sign Up";
}

<section class="signup">
	<div class="Container">
		@if (!string.IsNullOrEmpty(ViewData["StatusMessage"]?.ToString()))
		{
			<div class="alert alert-danger">
				@ViewData["StatusMessage"]
			</div>
		}
		<form method="post" asp-action="Signup" asp-controller="Auth" novalidate>
			<h1>Create account</h1>
			<p>Already have an account yet? <a asp-action="Signin" asp-controller="Auth">Sign in here</a></p>

			<div class="form-content">
				<div id="from-firstname" class="input-group">
					<label asp-for="FirstName"></label>
					<input asp-for="FirstName" />
					<span asp-asp-validation-for="FirstName"></span>
				</div>
				<div id="from-lastname" class="input-group">
					<label asp-for="LastName"></label>
					<input asp-for="LastName" />
					<span asp-asp-validation-for="LastName"></span>
				</div>
				<div id="from-email" class="input-group">
					<label asp-for="Email"></label>
					<input asp-for="Email" />
					<span asp-asp-validation-for="Email"></span>
				</div>
				<div id="from-password" class="input-group">
					<label asp-for="Password"></label>
					<input asp-for="Password" />
					<span asp-asp-validation-for="Password"></span>
				</div>
				<div id="from-confirmpassword" class="input-group">
					<label asp-for="ConfirmPassword"></label>
					<input asp-for="ConfirmPassword" />
					<span asp-asp-validation-for="ConfirmPassword"></span>
				</div>
				<div id="from-checkbox" class="checkbox-group">
					<div class="input group">
						<input asp-for="TermsAndConditions" />
						<label asp-for="TermsAndConditions"></label>
					</div>
					<span asp-validation-for="TermsAndConditions"></span>
				</div>
				<div id="form-button">
					<button type="submit" class="btn btn-theme"><i class="fa-regular fa-arrow-left-to-bracket"></i>Sign up</button>
				</div>
			</div>
		</form>

	</div>
</section>
