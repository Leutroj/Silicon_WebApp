@model SignInViewModel
@{
	ViewData["Title"] = "Sign In";
}

<section class="signin">
	<div class="Container">
		@if(!string.IsNullOrEmpty(ViewData["StatusMessage"]?.ToString()))
		{
			<div class="alert alert-danger">
				@ViewData["StatusMessage"]
			</div>
		}
		<form method="post" asp-action="SignIn" asp-controller="Auth" asp-route-ReturnUrl="@ViewData["ReturnUrl"]" novalidate>
			<h1>Welcome back</h1>
			<p>Don't have an account yet? <a asp-action="SignUp" asp-controller="Auth">Sign up here</a></p>

			<div class="form-content">
				<div id="from-email" class="input-group">
					<label asp-for="Email"></label>
					<input asp-for="Email" />
				</div>
				<div id="from-password" class="input-group">
					<label asp-for="Password"></label>
					<input asp-for="Password" />
				</div>
				<div id="from-checkbox" class="checkbox-group">
					<div class="input group">
						<input asp-for="IsPresistent" />
						<label asp-for="IsPresistent"></label>
					</div>
				</div>
				<div id="form-button">
					<button type="submit" class="btn btn-theme"><i class="fa-regular fa-arrow-left-to-bracket"></i>Sign in</button>
				</div>
			</div>
		</form>

	</div>
</section>
